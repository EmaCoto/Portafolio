---
interface Props {
  span: string;
	h2: string;
}
const { h2, span } = Astro.props;
---

<div class="max-w-fit px-6 mb-10 relative group/title">
    <div class="flex items-center gap-4">
      <div class="relative h-10 w-1 bg-[#72bf78]/20 overflow-hidden hidden md:block">
        <div class="absolute top-0 left-0 w-full h-full bg-[#72bf78] animate-scanline"></div>
      </div>
      
      <div class="relative">
        <span class="text-[#72bf78] font-mono text-xs tracking-[0.4em] uppercase opacity-70 group-hover/title:opacity-100 transition-opacity">
          {span}
        </span>
        <div class="relative overflow-hidden">
          <h2 class="text-2xl md:text-4xl font-black text-white uppercase tracking-tighter transition-all duration-300 group-hover/title:translate-x-2">
            {h2}<span class="text-[#72bf78]">.</span>
          </h2>
          <span class="absolute top-0 left-0 text-white uppercase tracking-tighter text-2xl md:text-4xl font-black opacity-0 group-hover/title:opacity-30 group-hover/title:animate-glitch pointer-events-none">
            {h2}
          </span>
        </div>
      </div>
    </div>
    
    <div class="mt-4 h-0.5 w-full max-w-md bg-white/5 relative overflow-hidden">
      <div class="absolute top-0 left-0 h-full w-0 bg-[#72bf78] group-hover/title:w-full transition-all duration-700 ease-out"></div>
    </div>
</div>

<style>
  /* Animación de escaneo para la barra vertical */
  @keyframes scanline {
    0% { transform: translateY(-100%); }
    100% { transform: translateY(100%); }
  }

  .animate-scanline {
    animation: scanline 2s linear infinite;
  }

  /* Efecto Glitch sutil para el título */
  @keyframes glitch {
    0% { transform: translate(0); }
    20% { transform: translate(-2px, 2px); }
    40% { transform: translate(-2px, -2px); }
    60% { transform: translate(2px, 2px); }
    80% { transform: translate(2px, -2px); }
    100% { transform: translate(0); }
  }

  .group-hover\/title\:animate-glitch {
    animation: glitch 0.3s cubic-bezier(.25,.46,.45,.94) both infinite;
  }

  /* Mejora del contenedor general de la sección para dar aire */
  section {
    padding-top: 100px;
    padding-bottom: 100px;
  }
</style>