---
import CtaFinal from '../components/blog/ctaFinal.astro';
import BlogCarousel from '../components/BlogCarousel.astro';
import Formation from '../components/Formation.astro';
import HomeInfo from '../components/HomeInfo.astro';
import Projects from '../components/Projects.astro';
import Skills from '../components/Skills.astro';
